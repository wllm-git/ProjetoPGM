<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvwValor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:text="VALOR"
        android:textSize="@dimen/font_valr" />

    <TextView
        android:id="@+id/tvwStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="STATUS"
        android:textSize="@dimen/font_status" />


    <TextView
        android:id="@+id/tvwDataAberta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvwDescDetalhes"
        android:layout_marginTop="35dp"
        android:text="DATA ABERTA" />

    <TextView
        android:id="@+id/tvwDataFechada"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvwDataAberta"
        android:text="DATA FECHADA" />

    <TextView
        android:id="@+id/tvwDescDetalhes"
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvwValor"
        android:layout_marginTop="42dp"
        android:text="DESCRICAO ITEM" />


</RelativeLayout>