<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >


    <EditText
        android:id="@+id/aberturaEdtInfo"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnTakePicture"
        android:layout_centerHorizontal="true"
        android:hint="@string/hint_descricao_acticity_abertura" />


    <Button
        android:id="@+id/btnTakePicture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/aberturaEdtInfo"
        android:background="@drawable/add_photo" />

    <Button
        android:id="@+id/btnSendService"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/aberturaEdtInfo"
        android:layout_below="@+id/aberturaEdtInfo"
        android:background="@drawable/send" />
</RelativeLayout>