<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="DATA ABERTA"
        android:id="@+id/tvwDataAberta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvwStatus"
        android:layout_alignStart="@+id/tvwValor"
        android:layout_marginTop="26dp" />

    <TextView
        android:text="DATA FECHADA"
        android:id="@+id/tvwDataFechada"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/tvwDataAberta"
        android:layout_marginBottom="42dp" />

    <TextView
        android:text="VALOR"
        android:id="@+id/tvwValor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_valr"
        android:layout_below="@+id/tvwDescDetalhes"
        android:layout_alignStart="@+id/tvwDescDetalhes"
        android:layout_marginTop="41dp" />

    <TextView
        android:text="STATUS"
        android:id="@+id/tvwStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_status"
        android:layout_below="@+id/tvwValor"
        android:layout_alignStart="@+id/tvwDataFechada"
        android:layout_marginTop="30dp" />


    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/horizontalScrollView">




    <LinearLayout
        android:id="@+id/row1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="31dp">

        <ImageView
            android:id="@+id/imagem1"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/camera_launcher" />

        <ImageView
            android:id="@+id/imagem2"
            android:layout_width="110dp"
            android:layout_height="90dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/camera_launcher"
            android:tag="ima" />

        <ImageView
            android:id="@+id/imagem3"
            android:layout_width="110dp"
            android:layout_height="90dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/camera_launcher"
            android:tag="ima" />

        <ImageView
            android:id="@+id/imagem5"
            android:layout_width="110dp"
            android:layout_height="90dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/camera_launcher" />

        <ImageView
            android:id="@+id/imagem4"
            android:layout_width="110dp"
            android:layout_height="90dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/camera_launcher" />

        <ImageView
            android:id="@+id/imagem6"
            android:layout_width="110dp"
            android:layout_height="90dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/camera_launcher" />
    </LinearLayout>
    </HorizontalScrollView>

    <TextView
        android:id="@+id/tvwDescDetalhes"
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:text="DESCRICAO ITEM"
        android:layout_below="@+id/horizontalScrollView"
        android:layout_centerHorizontal="true" />


</RelativeLayout>